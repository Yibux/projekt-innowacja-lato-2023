<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>If_pesel_is_correct</fullName>
    <active>true</active>
    <errorConditionFormula>REGEX(Personal_ID_Number__c , &quot;[0-9]+&quot;) = FALSE ||   LEN(Personal_ID_Number__c )  &lt;&gt; 11 || VALUE(MID(Personal_ID_Number__c,5,2))&lt;31</errorConditionFormula>
    <errorDisplayField>Personal_ID_Number__c</errorDisplayField>
    <errorMessage>Personal ID is incorrect!</errorMessage>
</ValidationRule>
